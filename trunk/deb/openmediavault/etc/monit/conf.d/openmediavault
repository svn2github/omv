# Sometimes it happens that the file permission gets modified
check file php-fcgi with path "/var/www/openmediavault/php-fcgi"
  if failed permission 700 then exec "/bin/chmod 700 /var/www/openmediavault/php-fcgi"

# Alert if disk space of root filesystem gets low
check filesystem rootfs with path /
  if space usage > 80% for 5 times within 15 cycles 
    then alert else if succeeded for 10 cycles then alert
