set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_CRONTAB_POWERMNGMT=${OMV_CRONTAB_POWERMNGMT:-"/etc/cron.d/openmediavault-powermngmt"}
OMV_CRONTAB_USERDEFINED=${OMV_CRONTAB_USERDEFINED:-"/etc/cron.d/openmediavault-userdefined"}

xmlstarlet sel -t \
  -o "SHELL=/bin/sh" -n \
  -o "PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin" -n \
  -o "# m h dom mon dow user    command" -n \
  -m "//system/crontab/job[type='reboot' or type='shutdown'][enable='1']" \
	  -v "concat(minute,' ',hour,' ',dayofmonth,' ',month,' ',dayofweek,' ',username,' ',command,' 2&gt;&amp;1')" -n \
  -b \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc > ${OMV_CRONTAB_POWERMNGMT}

xmlstarlet sel -t \
  -o "SHELL=/bin/sh" -n \
  -o "PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin" -n \
  -o "# m h dom mon dow user    command" -n \
  -m "//system/crontab/job[enable='1' and type='userdefined']" \
	  -v "concat(minute,' ',hour,' ',dayofmonth,' ',month,' ',dayofweek,' ',username,' ',command,' 2&gt;&amp;1')" -n \
  -b \
  ${OMV_CONFIG_FILE} | xmlstarlet unesc > ${OMV_CRONTAB_USERDEFINED}

chmod 644 ${OMV_CRONTAB_POWERMNGMT}
chmod 644 ${OMV_CRONTAB_USERDEFINED}
