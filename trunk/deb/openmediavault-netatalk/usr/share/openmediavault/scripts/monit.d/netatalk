set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

OMV_NETATALK_MONIT=${OMV_NETATALK_MONIT:-"/etc/monit/conf.d/netatalk"}

mkconf() {
	cat <<EOF > ${OMV_NETATALK_MONIT}
check process netatalk with pidfile /var/run/afpd.pid
  start program = "/etc/init.d/netatalk start"
  stop program = "/etc/init.d/netatalk stop"
  if failed host 127.0.0.1 port 548 type TCP then restart
  if 5 restarts within 5 cycles then timeout
  mode active
EOF
}

case "$1" in
	remove)
		rm -f ${OMV_NETATALK_MONIT}
		;;

	mkconf)
		mkconf
		;;

	*)
		echo "$(basename $0) called with unknown argument '$1'" >&2
		exit 1
	;;
esac
