# Documentation/Howto:
# https://wiki.ubuntu.com/PAMConfigFrameworkSpec
# http://www.debian.org/security/pam-auth.de.html

set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

# PAM profiles are stored below /usr/share/pam-configs
if [ "$(omv_config_get "//system/directoryservice/enable")" = "1" ]; then
	type=$(omv_config_get "//system/directoryservice/type")
	case ${type} in
	ad)
		pam-auth-update --package winbind
		;;
	ldap)
		pam-auth-update --package ldap
		;;
	esac
else
	pam-auth-update --package --remove ldap
	pam-auth-update --package --remove winbind
fi
